.main {
    display: flex;
    width: 100%;
    height: 100vh;
}

.side-bar-view {
    display: flex;
    flex-direction: column;
    width: 150rpx;
    height: 100vh;
    background-color: #f5f5f5;
}

.side-bar-view .side-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 150rpx;
    background-color: #ccc;
}

.side-bar-view .selected-item {
    background-color: #fff;
    color: red;
}

.right-view {
    width: 600rpx;
    height: 100%;
}

.QRCode-list {
    display: flex;
    flex-wrap: wrap;
}

.QRCode-content-view {
    display: flex;
    flex-wrap: wrap;
    width: 280rpx;
    height: 300rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    left: 6rpx;
    top: 1rpx;
    border-radius: 5rpx;
    box-shadow: 0 0 0 0.063rem rgba(217, 217, 217, 1);
}

.right-view .QRCode {
    width: 250rpx;
    height: 250rpx;
    background-color: #ccc;
    margin: 25rpx;
}

.img{
    width: 230rpx;
    height: 230rpx;
    margin: 0 auto;
}
/*---start of common wxss---*/

.textC, .wrapperC {
    top: 0;
    left: 0;
    word-break: break-all;
    text-align: center;
    display: flex;
    box-sizing: border-box;
    transform-origin: 0% 0%;
    -webkit-transform-origin: 0% 0%;
    -webkit-font-smoothing: antialiased;
}

.text_38 {
    width: 404rpx;
    margin-left: 18rpx;
    color: rgba(0, 0, 0, 1);
    line-height: 150%;
}

.QRcode-canvas-view {
    text-align: center;
    margin-left: 15rpx;
}
