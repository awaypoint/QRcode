.main {
    display: flex;
    width: 100%;
    height: 100vh;
}

.side-bar-view {
    display: flex;
    flex-direction: column;
    width: 150rpx;
    height: 100vh;
    background-color: #f5f5f5;
}

.side-bar-view .side-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 150rpx;
    background-color: #ccc;
}

.side-bar-view .selected-item {
    background-color: #fff;
    color: red;
}

.right-view {
    width: 600rpx;
    height: 100%;
}

.QRCode-content-view {
    display: flex;
    flex-wrap: wrap;
    width: 280rpx;
    height: 300rpx;
    margin-top:10rpx;
    margin-left:10rpx;
    left: 6rpx;
    top: 1rpx;
    border-radius: 5rpx;
    box-shadow: 0 0 0 0.063rem rgba(217, 217, 217, 1);
}

.right-view .QRCode {
    width: 250rpx;
    height: 250rpx;
    background-color: #ccc;
    margin: 25rpx;
}
